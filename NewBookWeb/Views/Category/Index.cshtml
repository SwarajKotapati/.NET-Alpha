@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row">
        <div class="col-6 pt-1">
            <h1>Index Category</h1>
        </div>
        <div class="col-6 pt-2 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle" style="padding-right:6px"></i> Create Category</a>
        </div>
    </div>

@*<h1>Index Category</h1>*@


<table class="table table-bordered table-stripped" style="width: 100%; margin-top:40px; margin-bottom: 40px">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item  in Model)
        {
            <tr>
                <td width="50%"> @item.Name</td>
                <td widht="30%"> @item.DisplayOrder</td>
                <td>   
                    <div class="row">
                        <div class="col-xs-8 col-md-5">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info"><i class = "bi bi-pencil-square" style="padding-right:6px"></i>Edit</a>
                        </div>
                 
                    
                        <div class="col-xs-8 col-md-6">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash" style="padding-right:6px"></i>Delete</a>
                        </div>
                    </div>
                </td>
                
            </tr>
        }
    </tbody>
</table>

